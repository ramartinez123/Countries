<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/links/edit/{{consul.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="country" class="form-control" placeholder="Country" value="{{consul.country}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="capital" class="form-control" placeholder="Capital" value="{{consul.capital}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="population" class="form-control" placeholder="Population" value="{{consul.population}}" autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="continent" class="form-control" placeholder="Continent" value="{{consul.continent}}" autofocus>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>